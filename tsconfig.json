{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2017",
    "types": [
      "node"
    ],
    "strict": true,
    "preserveConstEnums": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
  },
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
    "node_modules/",
    "dist/"
  ]
}